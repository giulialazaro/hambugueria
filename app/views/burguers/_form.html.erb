    <% @burguer.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger" role="alert">
        <%= msg %>
    </div>
<% end %>
<%= form_for @burguer  do |form|%>
    <div class="container mx-auto border mt-3" style="background-color: #FFE4C4; border-color: #000000 !important;">
        <div class="row mt-5">
            <div  class="col-sm-5 mx-auto">
                <div class="form-group"  >
                    <%= form.label :nome%>
                    <%= form.text_field :nome, class:"form-control mb-2 mt-2", style: "border-color: #000000; resize: none "%>
                </div>
            </div>
        </div> 
        <div class="row">
            <div  class="col-sm-5 mx-auto">
                <div class="form-group"  >
                    <%= form.label :descricao%>
                    <%= form.text_field :descricao, class:"form-control mb-2 mt-2", style: "border-color: #000000; resize: none "%>
                </div>
            </div>
        </div>   
        <div class="row">
            <div class="col-sm-5 mx-auto" >
                <div class="form-group">
                    <%= form.label :valor%>
                    <%= form.text_field :valor,  class:"form-control mb-2 mt-2", style: "border-color: #000000; resize:none"%>
                </div>
            </div>
        </div>       
        <div class="row mt-3">
            <div class="col-md-5 mb-4 mx-auto">
              <%= form.submit "Salvar", class:"btn btn-lg  text-white ", style: "background-color: #A0522D" %>
               <%=link_to "Cancelar", burguers_path, class: "btn  btn-lg btn-danger text-white"%>
            </div>
        </div> 
    </div>    
<% end %>