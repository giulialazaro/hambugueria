
<% @contrato.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger" role="alert">
        <%= msg %>
    </div>
<% end %>
<%= form_for @contrato  do |form|%>
    <div class="container mx-auto border p-0 mt-5 mb-5" style="background-color: #FFE4C4; border-color: #000000 !important">
        <div class="row mt-5">
            <div  class="col-sm-5 mx-auto">
                <div class="form-group"  >
                    <%= form.label :nome%>
                    <%= form.text_field :nome, class:"form-control mb-2 mt-2", style: "border-color: #000000; resize: none "%>
                </div>
            </div>
        </div> 
        <div class="row">
            <div  class="col-sm-5 mx-auto">
                <div class="form-group"  >
                    <%= form.label :telefone%>
                    <%= form.text_field :telefone, class:"form-control mb-2 mt-2", style: "border-color: #000000; resize: none "%>
                </div>
            </div>
        </div>   
         <div class="row">
            <div  class="col-sm-5 mx-auto">
                <div class="form-group"  >
                    <%= form.label :endereco%>
                    <%= form.text_field :endereco, class:"form-control mb-2 mt-2", style: "border-color: #000000; resize: none "%>
                </div>
            </div>
        </div>   
         <div class="row">
            <div  class="col-sm-5 mx-auto">
                <%= form.label :burguer_id%>    
                <div class="form-group"  >
                    <%= form.select :burguer_id, Burguer.all.pluck(:nome, :id) ,class:"form-control mb-2 mt-2", style: "border-color: #000000; resize: none "%>
                </div>
            </div>
        </div>
        <div class="row">
            <div  class="col-sm-5 mx-auto">
                <%= form.label :bebida_id%>
                <div class="form-group"  >
                    <%= form.select :bebida_id, Bebida.all.pluck(:descricao, :id) ,class:"form-select mb-2 mt-2", style: "border-color: #000000; resize: none "%>
                </div>
            </div>
        </div>     
        <div class="row mb-5">
            <div class="col-sm-5 mt-2 mx-auto">
                <div class="form-group">
                    <%= form.submit "Salvar", class:"btn btn-success w-100", style: "background-color: #00000" %>
                    <%=link_to "Cancelar", burguers_path, class: "btn btn-danger text-white mb-3 w-100 mt-2"%>
                </div>
            </div>
        </div> 
    </div>    
<% end %>