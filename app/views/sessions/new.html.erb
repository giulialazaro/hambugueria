<%= stylesheet_link_tag "login" %>
<% if flash[:alert] %>
    <div class="alert alert-warning" role="alert">
        <%= flash[:alert] %>
    </div>
<% end %>

<html>
<body class="fundo">
<%= form_for :session, url: authentication_path do |f| %>
<div class="container">
	<div class="d-flex justify-content-center mt-5">
		<div class="card">
			<div class="card-header">
				<h3>Entre</h3>
				<div class="d-flex justify-content-end social_icon">
					<span><i class="fab fa-facebook-square"></i></span>
					<span><i class="fab fa-google-plus-square"></i></span>
					<span><i class="fab fa-twitter-square"></i></span>
				</div>
			</div>
			<div class="card-body">
				<form>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
              					<%= f.label "Nome", class:"mt-3 text-white" %><br />
						</div>
            			<%= f.text_field :username, autocomplete: "off", class: "w-100 mb-2 mt-2", style:"border-color: #F4A460"  %>
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
              <%= f.label "Senha", class: "text-white"%>
						</div>
            <%= f.password_field :password, autocomplete: "off", class: "w-100 mt-2",style:"border-color: #F4A460" %>
					</div>
					<div class="form-group">
						<input type="submit" value="Login" class="btn float-right login_btn mt-3 w-100">
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<% end %>
</body>
</html>